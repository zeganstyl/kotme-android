<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kotme.CropImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitStart"
        android:src="@drawable/b_3" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/crab"
        android:layout_width="158dp"
        android:layout_height="115dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/crab_hello"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

    <ImageView
        android:id="@+id/seashell"
        android:layout_width="90dp"
        android:layout_height="102dp"
        android:src="@drawable/seashell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <ImageView
        android:id="@+id/boards"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="-100dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:padding="100px"
        android:scaleType="centerInside"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/logo_frame" />

    <FrameLayout
        android:id="@+id/logo_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_background"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/wood" />

        <com.kotme.OutlineTextView
            android:id="@+id/logo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/kotme"
            android:textColor="#FFFF00"
            android:textSize="70sp"
            app:outlineColor="#e7a321"
            app:outlineWidth="5dp" />
    </FrameLayout>

    <Button
        android:id="@+id/play"
        android:layout_width="294dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:text="Играть"
        android:textAllCaps="false"
        android:textColor="#6C461A"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_frame" />

    <Button
        android:id="@+id/legend"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginTop="140dp"
        android:background="#00000000"
        android:text="Легенда"
        android:textAllCaps="false"
        android:textColor="#6C461A"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_frame" />

    <Button
        android:id="@+id/achievements"
        android:layout_width="295dp"
        android:layout_height="59dp"
        android:layout_marginTop="85dp"
        android:background="#00000000"
        android:text="Достижения"
        android:textAllCaps="false"
        android:textColor="#6C461A"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>